{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"],
            "~assets/*": ["./assets/*"],
            "~features/*": ["./features/*"],
            "~constants/*": ["./constants/*"],
            "~styles/*": ["./styles/*"]
        },
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
